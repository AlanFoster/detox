{
  "name": "detox",
  "description": "E2E tests and automation for mobile",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "version": "4.1.4",
  "bin": {
    "detox": "./scripts/detox.js",
    "mocha": "./node_modules/.bin/mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wix/detox.git"
  },
  "nativePackage": true,
  "bugs": {
    "url": "https://github.com/wix/detox/issues"
  },
  "homepage": "https://github.com/wix/detox/detox",
  "main": "./lib/index.js",
  "author": "Tal Kol <talkol@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "scripts/build.sh",
    "lint": "eslint src",
    "test-install": "node scripts/test-install.js",
    "test-clean": "node scripts/test-clean.js",
    "test-update-native": "node scripts/test-update-native.js",
    "test": "node scripts/test.js",
    "start-server": "node scripts/start-server.js",
    "start-packager": "node scripts/start-packager.js",
    "test-exec": "node scripts/test-exec.js",
    "unit": "jest",
    "unit:watch": "jest --watch --trace-warnings",
    "postinstall": "scripts/postinstall.sh",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/jest": "latest",
    "@types/lodash": "latest",
    "@types/node": "latest",
    "@types/ws": "latest",
    "colors": "^1.1.2",
    "eslint": "3.x.x",
    "eslint-plugin-babel": "4.x.x",
    "jest": "^18.1.0",
    "minimist": "^1.2.0",
    "shelljs": "^0.7.3",
    "ttab": "^0.3.1",
    "typescript": "^2.1.5"
  },
  "dependencies": {
    "child-process-promise": "^2.2.0",
    "commander": "^2.9.0",
    "lodash": "^4.14.1",
    "mocha": "^3.2.0",
    "npmlog": "^4.0.2",
    "react-native-invoke": "^0.2.1",
    "ws": "^1.1.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testRegex": ".*\\.test\\.(ts|tsx|js)$",
    "testPathDirs": [
      "node_modules",
      "src"
    ],
    "resetMocks": true,
    "resetModules": true
  }
}
